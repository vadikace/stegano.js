{{!-- Choose RGB channel --}}
<div class="form-group">
    <label for="algorithmChannel">Choose algorithm RGB channel:</label>
    <select id="algorithmChannel" class="form-control" rv-value="model:channel">
        <option disabled selected> -- select an option -- </option>
        {{#each channels}}
            <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
</div>
{{!-- Enter step --}}
<div class="form-group">
    <label for="algorithmStep">Enter fixed step:</label>
    <input type="number" min="0" id="algorithmStep" class="form-control" rv-value="model:step"/>
</div>